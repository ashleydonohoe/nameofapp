<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1 class="page-heading">Contact Us</h1>
			<%= flash[:notice] %>

			<%= form_tag("/static_pages/thank_you") do %>
			<div class="row">
			<div class="col-md-6 col-md-offset-3">
			    <div class="form-group">
			        <%= label_tag :name, "Name" %>
			        <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
			    </div>      
			    <div class="form-group">
			        <%= label_tag :email, "Email Address" %>
			        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
			    </div>
			    <div class="form-group">
			        <%= label_tag :phone, "Phone" %>
			        <%= telephone_field_tag :phone, nil, class: "form-control", placeholder: "Enter Phone Number" %>
			    </div>
			    <div class="form-group">
			        <%= label_tag :message, "Message" %>
			        <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
        		</div> 
        		<%= submit_tag "Send", class: "btn btn-default" %>        
			<% end %>
		</div>
	</div>
</div>
