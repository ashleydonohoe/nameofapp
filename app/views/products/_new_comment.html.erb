<% if signed_in? %>
  <div class="container">

  <h4>Add a review:</h4>
    <%= form_for([@product, @product.comments.build]) do |f| %>
      <div class="form-group small-comment">
        <%= f.label :body, "Comments" %><br>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="rating">
      </div> 
      <div class="actions">
        <%= f.submit "Submit", class: "btn btn-default" %>
      </div>
  <% end %>
  </div>
<% end %>